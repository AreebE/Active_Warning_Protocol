<?xml version="1.0" encoding="utf-8"?>

<FrameLayout android:id="@+id/map_frag_display"
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MapDisplayFragment">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="16dp"
        >

        <com.google.android.gms.maps.MapView android:id="@+id/mapView"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="0.9"
            android:layout_margin="8dp"
            />


        <Button android:id="@+id/report_event"
            android:drawableLeft="@drawable/report_flag"
            android:drawableTint="@color/white"
            android:backgroundTint="@color/black"
            android:shadowColor="#972E2E2E"
            android:drawablePadding="8dp"
            android:shadowRadius="10"
            android:layout_width="200dp"
            android:layout_height="0dp"
            android:layout_weight="0.102"
            android:layout_gravity="center"
            android:text="@string/report"

            android:layout_margin="8dp"
            />

    </LinearLayout>

    <Button android:id="@+id/select_event"
        android:drawableLeft="@drawable/shooter_icon"
        android:drawableTint="@color/white"
        android:backgroundTint="@color/shoot_color"
        android:shadowColor="#972E2E2E"
        android:drawablePadding="8dp"
        android:shadowRadius="10"
        android:layout_width="200dp"
        android:layout_height="80dp"
        android:layout_gravity="top|left"
        android:text="@string/shooting_name"

        android:layout_margin="8dp"
        />

</FrameLayout>