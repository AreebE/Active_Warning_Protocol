<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center|top"
    tools:context=".ReportFragment">

    <Space
        android:layout_width="match_parent"
        android:layout_height="20dp"/>
    <!-- TODO: Update blank fragment layout -->
    <Button android:id="@+id/event_type"
        android:backgroundTint="@color/lightGray"
        android:layout_width="200dp"
        android:layout_height="75dp"
        android:textColor="@color/white"
        android:text="" />

    <Space
        android:layout_width="match_parent"
        android:layout_height="30dp"/>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="36dp"
        android:textColor="@color/black"
        android:text="@string/contentForReport"
        android:gravity="center"
        />

    <Space
        android:layout_width="match_parent"
        android:layout_height="10dp"/>

    <EditText android:id="@+id/details_of_event"
        android:background="@color/lightGray"
        android:layout_width="300dp"
        android:layout_height="200dp"
        android:padding="16dp"
        android:inputType="textMultiLine"
        android:textAlignment="gravity"
        android:gravity="left|top"/>

    <Space
        android:layout_width="match_parent"
        android:layout_height="40dp"/>

    <Button android:id="@+id/report_event"
        android:backgroundTint="@color/black"
        android:layout_width="180dp"
        android:layout_height="75dp"
        android:drawableTint="@color/white"
        android:drawableLeft="@drawable/report_flag"
        android:textColor="@color/white"
        android:text="@string/submit_report"
        />

</LinearLayout>